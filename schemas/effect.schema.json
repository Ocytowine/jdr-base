{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/schemas/effect.json",
  "title": "Effect",
  "type": "object",
  "required": [
    "id",
    "type",
    "source",
    "payload"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "priority": {
      "type": "integer"
    },
    "conditions": {
      "type": "object"
    },
    "duration": {
      "type": [
        "null",
        "object"
      ]
    },
    "payload": {
      "type": "object"
    }
  }
}